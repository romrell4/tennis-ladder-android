<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".controller.ReportMatchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <android.support.constraint.Guideline
                android:id="@+id/center_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5" />

            <ImageView
                android:id="@+id/me_image"
                android:layout_width="@dimen/profile_image_full_size"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/profile_content_description"
                app:layout_constraintEnd_toStartOf="@+id/center_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_default_user" />

            <ImageView
                android:id="@+id/opponent_image"
                android:layout_width="@dimen/profile_image_full_size"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/profile_content_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/center_guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_default_user" />

            <TextView
                android:id="@+id/me_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/me_image"
                app:layout_constraintStart_toStartOf="@+id/me_image"
                app:layout_constraintTop_toBottomOf="@+id/me_image"
                tools:text="My Name" />

            <TextView
                android:id="@+id/opponent_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/opponent_image"
                app:layout_constraintStart_toStartOf="@+id/opponent_image"
                app:layout_constraintTop_toBottomOf="@+id/opponent_image"
                tools:text="Opponent's Name" />

            <TextView
                android:id="@+id/report_instructions_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/report_instructions"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/me_name_text" />

            <TextView
                android:id="@+id/set1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/set_1_label"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/one_third_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_instructions_label" />

            <EditText
                android:id="@+id/me_set1_score"
                style="@style/SetEditText"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:nextFocusForward="@id/opponent_set1_score"
                app:layout_constraintEnd_toStartOf="@+id/set1_separator"
                app:layout_constraintTop_toBottomOf="@+id/set1_label" />

            <TextView
                android:id="@+id/set1_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_separator"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/me_set1_score"
                app:layout_constraintEnd_toEndOf="@+id/set1_label"
                app:layout_constraintStart_toStartOf="@+id/set1_label"
                app:layout_constraintTop_toTopOf="@+id/me_set1_score" />

            <EditText
                android:id="@+id/opponent_set1_score"
                style="@style/SetEditText"
                android:layout_marginStart="8dp"
                android:nextFocusForward="@id/me_set2_score"
                app:layout_constraintBottom_toBottomOf="@+id/me_set1_score"
                app:layout_constraintStart_toEndOf="@+id/set1_separator"
                app:layout_constraintTop_toTopOf="@+id/me_set1_score" />

            <android.support.constraint.Guideline
                android:id="@+id/one_third_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".33" />

            <TextView
                android:id="@+id/set2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/set_2_label"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/set1_label"
                app:layout_constraintEnd_toStartOf="@+id/two_thirds_guideline"
                app:layout_constraintStart_toStartOf="@+id/one_third_guideline"
                app:layout_constraintTop_toTopOf="@+id/set1_label" />

            <EditText
                android:id="@+id/me_set2_score"
                style="@style/SetEditText"
                android:layout_marginEnd="8dp"
                android:nextFocusForward="@id/opponent_set2_score"
                app:layout_constraintBottom_toBottomOf="@+id/me_set1_score"
                app:layout_constraintEnd_toStartOf="@+id/set2_separator"
                app:layout_constraintTop_toTopOf="@+id/me_set1_score" />

            <TextView
                android:id="@+id/set2_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_separator"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/set1_separator"
                app:layout_constraintEnd_toEndOf="@+id/set2_label"
                app:layout_constraintStart_toStartOf="@+id/set2_label"
                app:layout_constraintTop_toTopOf="@+id/set1_separator" />

            <EditText
                android:id="@+id/opponent_set2_score"
                style="@style/SetEditText"
                android:layout_marginStart="8dp"
                android:nextFocusForward="@id/me_set3_score"
                app:layout_constraintBottom_toBottomOf="@+id/me_set1_score"
                app:layout_constraintStart_toEndOf="@+id/set2_separator"
                app:layout_constraintTop_toTopOf="@+id/me_set1_score" />

            <android.support.constraint.Guideline
                android:id="@+id/two_thirds_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".67" />

            <TextView
                android:id="@+id/set3_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/set_3_label"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/set1_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/two_thirds_guideline"
                app:layout_constraintTop_toTopOf="@+id/set1_label"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/me_set3_score"
                style="@style/SetEditText"
                android:layout_marginEnd="8dp"
                android:nextFocusForward="@id/opponent_set3_score"
                app:layout_constraintBottom_toBottomOf="@+id/me_set1_score"
                app:layout_constraintEnd_toStartOf="@+id/set3_separator"
                app:layout_constraintTop_toTopOf="@+id/me_set1_score" />

            <TextView
                android:id="@+id/set3_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_separator"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/set1_separator"
                app:layout_constraintEnd_toEndOf="@+id/set3_label"
                app:layout_constraintStart_toStartOf="@+id/set3_label"
                app:layout_constraintTop_toTopOf="@+id/set1_separator"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/opponent_set3_score"
                style="@style/SetEditText"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/me_set1_score"
                app:layout_constraintStart_toEndOf="@+id/set3_separator"
                app:layout_constraintTop_toTopOf="@+id/me_set1_score" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorAccent"
        android:text="@string/submit"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>